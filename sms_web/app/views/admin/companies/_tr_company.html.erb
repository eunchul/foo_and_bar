<% company = company %>
<%= content_tag_for :tr, company do %>
  <td class="logo"><%= image_tag company.image_raw.url(:thumb, false) %></td>
  <td class="flickr_url"><%= display_company_flickr_image(company) %></td>
  <td class="booth_code"><%= company.booth_code %></td>
  <td class="name"><%= company.name %></td>
  <td class="category"><%= display_category_name(company.category) %></td>
  <td class="priority"><%= company.priority %></td>
  <td class="drafted_at"><%= display_published_status(company.published) %></td>
  <td class="actions">
    <% unless company.image_raw_file_name.nil? %>
      <%= link_to 'Upload to Flickr', upload_to_flickr_admin_company_path(company), :remote => true %>
    <% end %>
    <%= link_to 'Edit', edit_admin_company_path(company) %>
    <%= link_to 'Destroy', admin_company_path(company), :confirm => 'Are you sure?', :method => :delete %>
  </td>
<% end %>
